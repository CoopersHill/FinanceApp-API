@model Finance_Frontend_MVC.Models.BankAccount

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>BankAccount</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccountDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccountDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccountType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccountType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccountOwnerId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccountOwnerId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccountBalance)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccountBalance)
        </dd>
    </dl>
</div>

<table class="table">
    <thead>
        <tr>
            Transactions @{ Model.transactions.Count();}
        </tr>
    </thead>
    <tbody>
        @foreach (var item in @Model.transactions)
        {
            
        <tr>
            <td>
                TransactionID @item.ID
            </td>
            <td>
                   Description: @item.Description
            </td>
        </tr>
        }

    </tbody>

</table>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
