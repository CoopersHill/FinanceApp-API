@model Finance_Frontend_MVC.Models.BankAccount

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>BankAccount</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccountDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccountDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccountType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccountType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccountOwnerId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccountOwnerId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccountBalance)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccountBalance)
        </dd>
    </dl>
</div>

<table class="table">
    <thead>
        <tr>
            Transactions @{ Model.transactions.Count();}
        </tr>
        <tr>
            <td> Transaction ID</td>
            <td>  amount </td>
            <td>Description</td>
        </tr>
    </thead>
    <tbody>
            @{ List<Transaction> theseTransactions = Model.transactions.ToList();
                for (var i = 0; i < theseTransactions.Count(); i++)
        {
                    <tr>
                        <td>
                            @Html.DisplayFor(item => theseTransactions[i].ID)

                        </td>
                        <td>
                            @Html.DisplayFor(item => theseTransactions[i].Amount)

                        </td>
                        <td>
                            : @Html.DisplayFor(item => theseTransactions[i].Description)
                        </td>
                    </tr>
                    }
                }
    </tbody>

</table>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
